{
  "compilerOptions": {
    "outDir": "dist",// onde quer gerar o código em JS
    "module": "CommonJS", // para usar import e export e quando compilar vai gerar com require
    "target": "ES2019", // gerar no padrão do ES2019
    "esModuleInterop": true, // modules que usam o commonJS, se usar o import converte automatico
    "strictNullChecks": true,
    "sourceMap": true, // cria um arquivo .map e mostra qual arquivo ts corresponde ao js, util para debbug
    "rootDir": "src"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}